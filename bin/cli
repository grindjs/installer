#!/usr/bin/env bash

pushd ${0%/*} > /dev/null
CLI_BIN="`pwd`/${0##*/}"
popd > /dev/null

source ${0%/*}/.init

VERSION=$(node -v)
VERSION=$(echo ${VERSION#*v} | cut -d. -f1)

FLAGS=""
if [ "$VERSION" -gt "6" ]; then
	FLAGS="--harmony-async-await"
fi

IN_CLI=true CLI_BIN="$CLI_BIN" exec babel-node $FLAGS boot/Cli.js "$@"
